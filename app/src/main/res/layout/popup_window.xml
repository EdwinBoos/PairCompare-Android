<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/image_view_face1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_view_face2_id"
        android:layout_toRightOf="@+id/image_view_face1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_below="@+id/image_view_face2_id"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="25sp"
        android:text="@string/okay" />

    <Button
        android:id="@+id/flip_camera_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/tv"
        android:text="@string/again" />

    <Button
        android:id="@+id/photo_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/flip_camera_id"
        android:layout_alignEnd="@+id/flip_camera_id"
        android:textColor="@color/colorAccent"
        android:layout_alignStart="@+id/flip_camera_id"
        android:text="@string/yes" />


</RelativeLayout>