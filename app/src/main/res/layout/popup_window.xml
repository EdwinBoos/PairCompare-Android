<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/primary_dark_material_dark_1"
    android:padding="3dp">

    <RelativeLayout
        android:id="@+id/relative_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_face1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_view_face2_id"
        android:layout_toRightOf="@+id/image_view_face1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_below="@+id/relative_layout_id"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorAccent"
        android:padding="25sp"
        android:text="@string/okay" />

    <Button
        android:id="@+id/accept_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/repeat_button_id"
        android:onClick="handleAcceptButtonPress"
        android:layout_alignEnd="@+id/repeat_button_id"
        android:textColor="@color/colorAccent"
        android:layout_alignStart="@+id/repeat_button_id"
        android:text="@string/yes" />

    <Button
        android:id="@+id/repeat_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:onClick="handleRepeatButtonPress"
        android:layout_below="@+id/tv"
        android:text="@string/again" />




</RelativeLayout>